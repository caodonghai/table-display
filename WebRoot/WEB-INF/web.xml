<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <servlet-name>EasySqlHelper</servlet-name>
    <servlet-class>easysqlhelper.EasySqlHelper</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>easysqlhelper.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateXml</servlet-name>
    <servlet-class>easysqlhelper.UpdateXml</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>XMLMaintain</servlet-name>
    <servlet-class>easysqlhelper.XMLMaintain</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>parServlet</servlet-name>
    <servlet-class>easysqlhelper.parServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>deleteServlet</servlet-name>
    <servlet-class>easysqlhelper.deleteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>searchServlet</servlet-name>
    <servlet-class>easysqlhelper.searchServlet</servlet-class>
  </servlet>






  <servlet-mapping>
    <servlet-name>EasySqlHelper</servlet-name>
    <url-pattern>/sqlhelper</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateXml</servlet-name>
    <url-pattern>/upate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>XMLMaintain</servlet-name>
    <url-pattern>/maintain</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>parServlet</servlet-name>
    <url-pattern>/parServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>deleteServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>searchServlet</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>config.html</welcome-file> 
  </welcome-file-list>

</web-app>